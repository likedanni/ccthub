.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #FFFFFF;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  box-sizing: border-box;
}

/* 景区列表 - 修正部分 */
.scenic-list {
  flex: 1;
  padding: 16px;
  overflow-y: auto;
  box-sizing: border-box;
  width: 100%;
  height: calc(100vh - 60px); /* 减去筛选栏高度 */
}

/* 景区卡片 */
.scenic-card {
  background: #FFFFFF;
  border-radius: 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 15px rgba(0, 0, 0, 0.04);
  border: 1px solid #F1F5F9;
  overflow: hidden;
  transition: all 0.3s;
  width: 100%;
  box-sizing: border-box;
}

.scenic-card:active {
  transform: scale(0.99);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}

/* 图片容器 */
.scenic-image-container {
  position: relative;
  width: 100%;
  height: 192px;
  overflow: hidden;
}

.scenic-image {
  width: 100%;
  height: 100%;
  transition: transform 0.5s;
}

.scenic-card:active .scenic-image {
  transform: scale(1.05);
}

/* 图片数量标签 */
.image-count-tag {
  position: absolute;
  top: 8px;
  left: 8px;
  background-color: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(4px);
  padding: 4px 8px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  gap: 4px;
}

.image-count-tag text {
  font-size: 12px;
  font-weight: 700;
  color: #FFFFFF;
}

.camera-icon {
  width: 14px;
  height: 14px;
}

/* 热门标签 */
.hot-tag {
  position: absolute;
  top: 8px;
  left: 8px;
  background-color: #FF6B6B;
  padding: 2px 8px;
  border-radius: 4px;
}

.hot-tag text {
  font-size: 10px;
  font-weight: 700;
  color: #FFFFFF;
}

/* 内容区域 */
.scenic-content {
  padding: 12px;
  width: 100%;
  box-sizing: border-box;
}

/* 标题行 */
.title-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8px;
  width: 100%;
}

.scenic-name {
  font-size: 18px;
  font-weight: 700;
  color: #1E293B;
  line-height: 1.4;
  flex: 1;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  min-width: 0;
}

/* 等级标签 */
.level-tag {
  padding: 2px 8px;
  border-radius: 6px;
  margin-left: 8px;
  flex-shrink: 0;
}

.level-5a {
  background-color: rgba(251, 192, 45, 0.1);
  border: 1px solid rgba(251, 192, 45, 0.2);
}

.level-4a {
  background-color: rgba(250, 114, 24, 0.1);
  border: 1px solid rgba(251, 192, 45, 0.2);
}

.level-tag text {
  font-size: 12px;
  font-weight: 700;
  color: #ff9008;
}

/* 描述 */
.scenic-description {
  font-size: 14px;
  color: #64748B;
  line-height: 1.5;
  margin-bottom: 12px;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  width: 100%;
}

/* 标签容器 */
.tag-container {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-bottom: 16px;
  width: 100%;
}

.tag-item {
  padding: 4px 8px;
  background-color: #F8FAFC;
  border: 1px solid #F1F5F9;
  border-radius: 6px;
  flex-shrink: 0;
}

.tag-item text {
  font-size: 12px;
  color: #64748B;
  font-weight: 500;
}

/* 底部信息 */
.bottom-info {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  width: 100%;
}

/* 左边信息 */
.info-left {
  flex: 1;
  min-width: 0;
}

/* 评分容器 */
.rating-container {
  display: flex;
  align-items: center;
  gap: 4px;
  margin-bottom: 8px;
  flex-wrap: wrap;
}

.rating-score {
  font-size: 12px;
  font-weight: 700;
  color: #ff9008;
}

.star-container {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.star-icon {
  width: 14px;
  height: 14px;
  margin-right: 1px;
  flex-shrink: 0;
}

.rating-count {
  font-size: 12px;
  color: #94A3B8;
  flex-shrink: 0;
}

/* 价格容器 */
.price-container {
  display: flex;
  align-items: baseline;
  flex-wrap: wrap;
}

.price-symbol {
  font-size: 12px;
  font-weight: 700;
  color: #FF6B6B;
}

.price {
  font-size: 20px;
  font-weight: 700;
  color: #FF6B6B;
  margin: 0 2px;
}

.price-unit {
  font-size: 12px;
  color: #94A3B8;
}

/* 预订按钮 */
.info-right {
  flex-shrink: 0;
}

.book-btn {
  background-color: #FBC02D;
  border-radius: 9999px;
  padding: 8px 24px;
  border: none;
  box-shadow: 0 2px 8px rgba(251, 192, 45, 0.2);
  font-size: 14px;
  font-weight: 700;
  color: #1E293B;
  line-height: 1.5;
  max-width: 100px;
}

.book-btn:active {
  background-color: #F9A825;
  transform: scale(0.95);
}

/* 加载更多 */
.load-more {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32px 0;
  opacity: 0.6;
  width: 100%;
}

.load-more-container {
  position: relative;
  width: 96px;
  height: 96px;
  background-color: #F8FAFC;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16px;
}

.landscape-icon {
  width: 48px;
  height: 48px;
  opacity: 0.3;
}

.search-icon {
  position: absolute;
  bottom: -4px;
  right: -4px;
  width: 24px;
  height: 24px;
  background-color: #FFFFFF;
  border-radius: 50%;
  padding: 4px;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { opacity: 0.6; }
  50% { opacity: 1; }
  100% { opacity: 0.6; }
}

.load-more-text {
  font-size: 14px;
  font-weight: 500;
  color: #94A3B8;
}

/* 没有更多数据 */
.no-more {
  text-align: center;
  padding: 32px 0;
  color: #94A3B8;
  font-size: 14px;
  width: 100%;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80px 20px;
  text-align: center;
}

.empty-icon {
  width: 120px;
  height: 120px;
  opacity: 0.3;
  margin-bottom: 16px;
}

.empty-text {
  font-size: 16px;
  color: #94A3B8;
  font-weight: 500;
}
/* 基础样式 */
page {
  background-color: #FFFFFF;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

.page-container {
  width: 100%;
  position: relative;
}

/* 顶部固定导航 */
.fixed-top {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
}

.top-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 100rpx 32rpx;
  pointer-events: none;
}

.nav-back-btn,
.nav-action-btn {
  width: 64rpx;
  height: 64rpx;
  background: rgba(5, 5, 5, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
  border: none;
  pointer-events: auto;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.nav-right-group {
  display: flex;
  gap: 16rpx;
  pointer-events: auto;
}

.nav-icon {
  width: 32rpx;
  height: 32rpx;
}

.nav-icon.favorite-active {
  filter: brightness(1.2);
}


/* 主要内容区域 */
.main-content {
  width: 100%;
  box-sizing: border-box;
}

/* 主图区域 */
.main-image-container {
  position: relative;
  width: 100%;
  height: 600rpx;
  overflow: hidden;
}

.main-image {
  width: 100%;
  height: 100%;
}

.image-indicator {
  position: absolute;
  bottom: 40rpx;
  right: 32rpx;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 8rpx 24rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  backdrop-filter: blur(10px);
}

.indicator-icon {
  width: 24rpx;
  height: 24rpx;
}

.indicator-text {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: 500;
}

/* 基本信息卡片 */
.info-card {
  padding: 0 32rpx;
  position: relative;
  z-index: 1;
  border-radius: 37rpx 37rpx 0rpx 0rpx;
  margin-top: -36rpx;
  background-color: #FFFFFF;
}

.card-divider {
  width: 48rpx;
  height: 4rpx;
  background-color: #E2E8F0;
  border-radius: 2rpx;
  margin: 0 auto 32rpx;
}

.basic-info {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.title-section {
  flex: 1;
}

.scenic-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #1E293B;
  line-height: 1.3;
  margin-bottom: 16rpx;
}

.tags-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.tag.level {
  background-color: rgba(251, 192, 45, 0.1);
  color: #FBC02D;
  border: 1rpx solid rgba(251, 192, 45, 0.2);
}

.tag.category {
  background-color: rgba(78, 205, 196, 0.1);
  color: #4ECDC4;
  border: 1rpx solid rgba(78, 205, 196, 0.2);
}

.tag.must-visit {
  background-color: rgba(251, 192, 45, 0.1);
  color: #FBC02D;
  border: 1rpx solid rgba(251, 192, 45, 0.2);
}

.rating-box {
  background-color: #FAFAFA;
  padding: 16rpx;
  border-radius: 16rpx;
  min-width: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.rating-score {
  display: flex;
  align-items: center;
  gap: 4rpx;
  margin-bottom: 4rpx;
}

.star-icon {
  width: 28rpx;
  height: 28rpx;
}

.score-text {
  font-size: 36rpx;
  font-weight: 700;
  color: #ff9008;
}

.review-count {
  font-size: 20rpx;
  color: #94A3B8;
}

.description {
  font-size: 28rpx;
  color: #64748B;
  line-height: 1.5;
  margin-bottom: 32rpx;
}

/* 实用信息滚动区域 */
.practical-info-scroll {
  width: 100%;
  padding: 32rpx ;
  white-space: nowrap;
}

.practical-info-container {
  display: inline-flex;
  gap: 24rpx;
}

.info-item {
  display: inline-flex;
  align-items: center;
  background-color: #FFFFFF;
  border: 2rpx solid #F1F5F9;
  border-radius: 16rpx;
  padding: 10rpx;
  min-width: 400rpx;
  box-shadow: 0 2rpx 15rpx rgba(0, 0, 0, 0.04);
  vertical-align: top;
  max-height: 100rpx;
}

.icon-container {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.time-icon {
  background-color: #EFF6FF;
}

.location-icon {
  background-color: #F0FDFA;
}

.phone-icon {
  background-color: #FEF7CD;
}

.info-icon {
  width: 36rpx;
  height: 36rpx;
}

.info-content {
  flex: 1;
  min-width: 0;
}

.info-label {
  display: block;
  font-size: 24rpx;
  color: #64748B;
  font-weight: 500;
  margin-bottom: 8rpx;
  white-space: normal;
}

.info-value-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.info-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #1E293B;
  white-space: normal;
}

.distance {
  color: #1E293B;
}

.status-badge {
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  font-weight: 700;
  flex-shrink: 0;
}

.status-badge.open {
  background-color: rgba(78, 205, 196, 0.1);
  color: #4ECDC4;
}

.navigate-btn {
  width: 64rpx;
  height: 64rpx;
  background-color: #1E293B;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-left: 16rpx;
  border: none;
}

.navigate-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 分隔条 */
.section-divider {
  height: 4rpx;
  background-color: #FAFAFA;
  width: 100%;
}

/* 票型选择区域 */
.ticket-section {
  padding: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1E293B;
}

.notice-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.notice-btn text {
  font-size: 26rpx;
  color: #64748B;
  font-weight: 500;
}

.notice-icon {
  width: 24rpx;
  height: 24rpx;
}

.ticket-tabs {
  display: flex;
  background-color: #F1F5F9;
  border-radius: 16rpx;
  padding: 4rpx;
  margin-bottom: 32rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #64748B;
  border-radius: 12rpx;
}

.tab.active {
  background-color: #FBC02D;
  color: #1E293B;
  font-weight: 700;
  box-shadow: 0 2rpx 8rpx rgba(251, 192, 45, 0.2);
}

.ticket-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.ticket-item {
  background-color: #FFFFFF;
  border: 2rpx solid #F1F5F9;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 15rpx rgba(0, 0, 0, 0.04);
}

.ticket-header {
  margin-bottom: 24rpx;
}

.ticket-name {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #1E293B;
  margin-bottom: 16rpx;
}

.ticket-tags {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.tag-badge {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.tag-badge:nth-child(1) {
  background-color: #F8FAFC;
  color: #64748B;
  border: 1rpx solid #E2E8F0;
}

.tag-badge:nth-child(2) {
  background-color: #FEE2E2;
  color: #DC2626;
  border: 1rpx solid #FECACA;
}

.ticket-footer {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.price-container {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.current-price {
  font-size: 48rpx;
  font-weight: 800;
  color: #FF5252;
}

.original-price {
  font-size: 28rpx;
  color: #94A3B8;
  text-decoration: line-through;
}

.book-ticket-btn {
  background-color: #FBC02D;
  color: #1E293B;
  font-size: 28rpx;
  font-weight: 700;
  padding: 20rpx 40rpx;
  border-radius: 12rpx;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(251, 192, 45, 0.2);
}

.book-ticket-btn.disabled {
  background-color: #F8FAFC;
  color: #94A3B8;
  box-shadow: none;
}

/* 详情导航 */
.detail-nav {
  display: flex;
  background-color: #FFFFFF;
  border-bottom: 2rpx solid #F1F5F9;
  position: sticky;
  top: 0;
  z-index: 10;
}

.nav-tab {
  flex: 1;
  text-align: center;
  padding: 32rpx 0;
  font-size: 28rpx;
  font-weight: 500;
  color: #64748B;
  position: relative;
}

.nav-tab.active {
  color: #FBC02D;
  font-weight: 700;
}

.active-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #FBC02D;
  border-radius: 2rpx;
}

/* 详情内容 */
.detail-content {
  padding: 32rpx;
}

.map-preview {
  position: relative;
  width: 100%;
  height: 320rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
}

.map-image {
  width: 100%;
  height: 100%;
}

.map-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.view-map-btn {
  background-color: #FBC02D;
  color: #1E293B;
  font-size: 24rpx;
  font-weight: 700;
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
}

.map-btn-icon {
  width: 24rpx;
  height: 24rpx;
}

.highlight-section {
  margin-bottom: 32rpx;
}

.highlight-text {
  display: block;
  font-size: 28rpx;
  color: #475569;
  line-height: 1.6;
  margin: 16rpx 0 32rpx;
}

.feature-cards {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.feature-card {
  background-color: #F8FAFC;
  border: 1rpx solid #E2E8F0;
  border-radius: 12rpx;
  padding: 24rpx;
}

.feature-label {
  display: block;
  font-size: 24rpx;
  color: #64748B;
  margin-bottom: 8rpx;
}

.feature-value {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1E293B;
}

/* 评价预览 */
.review-preview {
  padding: 32rpx;
}

.review-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.review-filters {
  display: flex;
  gap: 16rpx;
}

.filter-btn {
  padding: 12rpx 24rpx;
  background-color: #F8FAFC;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #475569;
}

.filter-btn.active {
  background-color: rgba(251, 192, 45, 0.2);
  color: #FBC02D;
}

.review-example {
  background-color: #FFFFFF;
  border: 1rpx solid #F1F5F9;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.reviewer-info {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #E2E8F0;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.reviewer-details {
  flex: 1;
}

.reviewer-name {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: #1E293B;
  margin-bottom: 8rpx;
}

.rating-stars {
  display: flex;
  gap: 4rpx;
}

.star {
  width: 24rpx;
  height: 24rpx;
}

.review-time {
  font-size: 24rpx;
  color: #94A3B8;
  flex-shrink: 0;
}

.review-content {
  display: block;
  font-size: 28rpx;
  color: #475569;
  line-height: 1.5;
  margin-bottom: 24rpx;
}

.review-images {
  width: 100%;
}

.images-container {
  display: inline-flex;
  gap: 16rpx;
}

.review-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background-color: #F1F5F9;
  flex-shrink: 0;
}

.view-all-btn {
  width: 100%;
  padding: 24rpx;
  background-color: #FFFFFF;
  border: 2rpx solid #E2E8F0;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #64748B;
  font-weight: 500;
}

/* 底部固定操作栏 */
.fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
}

.bottom-bar {
  background-color: #FFFFFF;
  border-top: 1rpx solid #F1F5F9;
  padding: 2rpx 30rpx 2rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.bottom-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.service-option {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 16rpx;
}

.service-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}

.service-text {
  font-size: 22rpx;
  color: #64748B;
  font-weight: 500;
}

.primary-booking-btn {
  flex: 1;
  height: 100rpx;
  background-color: #FBC02D;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 38rpx;
  box-shadow: 0 4rpx 20rpx rgba(251, 192, 45, 0.3);
  border: none;
}

.price-display {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.price-label {
  font-size: 22rpx;
  color: rgba(30, 41, 59, 0.8);
  font-weight: 500;
  margin-bottom: 4rpx;
}

.price-main {
  display: flex;
  align-items: baseline;
}

.currency {
  font-size: 24rpx;
  font-weight: 700;
  color: #1E293B;
  margin-right: 4rpx;
}

.price {
  font-size: 48rpx;
  font-weight: 800;
  color: #1E293B;
}

.price-unit {
  font-size: 24rpx;
  font-weight: 500;
  color: #1E293B;
  margin-left: 8rpx;
}

.booking-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.booking-action text {
  font-size: 32rpx;
  font-weight: 700;
  color: #1E293B;
}

.action-arrow {
  width: 24rpx;
  height: 24rpx;
}
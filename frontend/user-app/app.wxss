/* app.wxss - 全局样式 */

/* 重置样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, 'Noto Sans SC', sans-serif;
  background-color: #F7F8FA;
  color: #333333;
  height: 100%;
  width: 100%;
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 通用按钮样式 */
.common-button {
  border-radius: 12px;
  transition: all 0.3s ease;
}

/* 文字样式 */
.text-primary {
  color: #FBC02D;
}

.text-red {
  color: #FF5252;
}

.text-sub {
  color: #999999;
}

/* 布局工具类 */
.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-col {
  display: flex;
  flex-direction: column;
}

/* 卡片阴影 */
.card-shadow {
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
}

.soft-shadow {
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
}

/* 圆角工具类 */
.rounded-3xl {
  border-radius: 24px;
}

.rounded-2xl {
  border-radius: 20px;
}

.rounded-xl {
  border-radius: 16px;
}
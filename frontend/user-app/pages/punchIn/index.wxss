/* 页面基础样式 */
page {
  background-color: #FFFFFF;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.page-container {
  padding: 0 30rpx;
  padding-bottom: 200rpx; /* 给底部规则栏留出空间 */
}

/* 进度卡片 */
.progress-card {
  background: linear-gradient(135deg, #FBC02D 0%, #F9A825 100%);
  border-radius: 30rpx;
  padding: 40rpx;
  margin: 40rpx 0 30rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 16rpx 60rpx -16rpx rgba(251, 192, 45, 0.4);
}

.progress-card-bg {
  position: absolute;
  right: -50rpx;
  top: -50rpx;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  filter: blur(40rpx);
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 30rpx;
  position: relative;
  z-index: 2;
}

.progress-label {
  display: block;
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.progress-text {
  display: block;
  color: #FFFFFF;
  font-size: 48rpx;
  font-weight: bold;
  line-height: 1.2;
}

.points-badge {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.4);
}

.icon-small {
  width: 28rpx;
  height: 28rpx;
}

.points-text {
  font-size: 24rpx;
  font-weight: bold;
  color: #3a547c;
}

.progress-bar {
  width: 100%;
  height: 18rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  backdrop-filter: blur(10px);
}

.progress-fill {
  height: 100%;
  background: #FFFFFF;
  border-radius: 12rpx;
  transition: width 0.6s ease-out;
}

.progress-tip {
  display: block;
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: bold;
  opacity: 0.8;
}

/* 标题 */
.section-title {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin: 50rpx 0 40rpx 10rpx;
}

.title-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #FBC02D;
}

.title-text {
  font-size: 26rpx;
  font-weight: bold;
  color: #64748B;
  letter-spacing: 1rpx;
  text-transform: uppercase;
}

/* 时间线 */
.timeline {
  position: relative;
}

.timeline-item {
  display: flex;
  gap: 40rpx;
  padding-bottom: 60rpx;
  position: relative;
}

.timeline-item.locked {
  opacity: 0.6;
  filter: grayscale(1);
}

.timeline-line {
  position: absolute;
  left: 56rpx;
  top: 112rpx;
  bottom: -48rpx;
  width: 4rpx;
  background-color: #E2E8F0;
  z-index: 0;
}

.timeline-item:last-child .timeline-line {
  display: none;
}

/* 时间线图标 */
.timeline-icon {
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  background: #F8FAFC;
  border: 4rpx solid rgba(78, 205, 196, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  position: relative;
  z-index: 2;
  transition: all 0.3s;
}

.timeline-icon.active-icon {
  background: #FBC02D;
  color: #1E293B;
  box-shadow: 0 16rpx 60rpx -16rpx rgba(251, 192, 45, 0.5);
  border: 8rpx solid #FFFFFF;
  transform: scale(1.1);
}

.icon-medium {
  width: 56rpx;
  height: 56rpx;
}

.icon-text {
  font-size: 48rpx;
  line-height: 1;
}

/* 任务卡片 */
.task-card {
  flex: 1;
  background: #F8FAFC;
  border-radius: 20rpx;
  padding: 40rpx;
  border: 2rpx solid #E2E8F0;
  transition: all 0.3s;
}

.task-card.active-card {
  background: #FFFFFF;
  border: 4rpx solid #FBC02D;
  box-shadow: 0 16rpx 60rpx -16rpx rgba(251, 192, 45, 0.4);
  position: relative;
  overflow: hidden;
}

.status-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.status-badge {
  font-size: 20rpx;
  font-weight: bold;
  padding: 8rpx 20rpx;
  border-radius: 100rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  line-height: 0.1; /* 或者使用具体值 */
  display: inline-flex; /* 或者使用 flex */
  align-items: center;
  justify-content: center;
  height: 30rpx; /* 8+8+20 = 36rpx，根据字体大小调整 */
}

.status-badge.completed {
  background: rgba(78, 205, 196, 0.1);
  color: #00ad67;
}

.status-badge.active {
  background: #FBC02D;
  color: #1E293B;
  box-shadow: 0 4rpx 12rpx rgba(251, 192, 45, 0.3);
}

.status-badge.reviewing {
  background: rgba(251, 192, 45, 0.1);
  color: #FBC02D;
}

.status-badge.locked,
.status-badge.final {
  background: #E2E8F0;
  color: #64748B;
}

.points-label {
  font-size: 20rpx;
  color: #64748B;
  font-weight: bold;
}

.task-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #1E293B;
  margin-bottom: 20rpx;
}

.task-title.completed {
  color: #94A3B8;
  text-decoration: line-through;
}

.task-desc {
  display: block;
  font-size: 28rpx;
  color: #64748B;
  line-height: 1.5;
  margin-bottom: 40rpx;
}

/* 审核框 */
.review-box {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  gap: 30rpx;
  border: 1rpx solid #F1F5F9;
  margin-top: 20rpx;
}

.review-image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 12rpx;
  object-fit: cover;
  border: 2rpx solid #F1F5F9;
}

.review-info {
  flex: 1;
}

.review-title {
  display: block;
  font-size: 24rpx;
  font-weight: bold;
  color: #1E293B;
  margin-bottom: 8rpx;
}

.review-time {
  display: block;
  font-size: 20rpx;
  color: #94A3B8;
}

/* 按钮 */
.action-buttons {
  display: flex;
  gap: 30rpx;
  margin-top: 40rpx;
}

.upload-btn {
  flex: 1;
  background: #FBC02D;
  color: #1E293B;
  font-size: 28rpx;
  font-weight: bold;
  height: 90rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  border: none;
  box-shadow: 0 12rpx 40rpx -10rpx rgba(251, 192, 45, 0.4);
  transition: all 0.2s;
}

.upload-btn:active {
  background: #F9A825;
  transform: scale(0.98);
}

.nav-btn {
  width: 90rpx;
  height: 90rpx;
  background: #F8FAFC;
  border: 2rpx solid #E2E8F0;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.nav-btn:active {
  background: #F1F5F9;
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 底部规则栏 */
.rules-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF; /* 重要：改为不透明背景 */
  border-top: 2rpx solid #F1F5F9;
  padding: 40rpx 48rpx;
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  box-shadow: 0 -8rpx 40rpx -8rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.info-icon {
  width: 40rpx;
  height: 40rpx;
  margin-top: 6rpx;
}

.rules-text {
  flex: 1;
  font-size: 24rpx;
  color: #64748B;
  line-height: 1.6;
}

.rules-title {
  font-weight: bold;
  color: #1E293B;
}

/* 特殊状态 */
.timeline-item.current .task-card {
  background: #FFFFFF;
  border: 4rpx solid #FBC02D;
  box-shadow: 0 16rpx 60rpx -16rpx rgba(251, 192, 45, 0.4);
}
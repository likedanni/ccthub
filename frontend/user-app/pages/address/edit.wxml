<view class="page-container">
  <!-- 表单内容 -->
  <scroll-view class="form-content" scroll-y>
    <view class="form-section">
      <!-- 收货人姓名 -->
      <view class="form-item">
        <text class="form-label">收货人姓名</text>
        <view class="input-wrapper">
          <input 
            class="form-input" 
            placeholder="请输入收货人姓名" 
            value="{{name}}"
            data-field="name"
            bindinput="onInput"
          />
          <view class="clear-btn" bindtap="clearInput" data-field="name">
            <image class="clear-icon" src="/images/icons/close.png" />
          </view>
        </view>
      </view>

      <!-- 手机号码 -->
      <view class="form-item">
        <text class="form-label">手机号码</text>
        <view class="input-wrapper">
          <input 
            class="form-input" 
            placeholder="请输入手机号码" 
            type="number"
            value="{{phone}}"
            data-field="phone"
            bindinput="onInput"
            maxlength="11"
          />
        </view>
      </view>

      <!-- 所在地区 -->
      <view class="form-item">
        <text class="form-label">所在地区</text>
        <view class="region-picker" bindtap="chooseRegion">
          <text class="region-text">{{region || '请选择所在地区'}}</text>
          <image class="arrow-icon" src="/images/icons/arrow-right.png" />
        </view>
      </view>

      <!-- 详细地址 -->
      <view class="form-item">
        <text class="form-label">详细地址</text>
        <view class="textarea-wrapper">
          <textarea 
            class="form-textarea" 
            placeholder="请输入详细地址，如街道、门牌号"
            value="{{detail}}"
            data-field="detail"
            bindinput="onInput"
            maxlength="100"
            auto-height
          />
          <view class="location-icon">
            <image class="location-icon-img" src="/images/icons/location.png" />
          </view>
        </view>
      </view>

      <!-- 标签 -->
      <view class="form-item">
        <text class="form-label">标签</text>
        <view class="tags-container">
          <block wx:for="{{tags}}" wx:key="*this">
            <view 
              class="tag-item {{selectedTag === item ? 'active-tag' : ''}}" 
              bindtap="selectTag"
              data-tag="{{item}}"
            >
              <text class="tag-text">{{item}}</text>
            </view>
          </block>
          <view class="tag-item custom-tag" bindtap="addCustomTag">
            <image class="add-icon" src="/images/icons/add_9BA8BC.png" />
            <text class="custom-tag-text">自定义</text>
          </view>
        </view>
      </view>

      <!-- 默认地址开关 -->
      <view class="default-switch-container">
        <view class="switch-info">
          <text class="switch-title">设为默认地址</text>
          <text class="switch-desc">每次下单时会优先推荐该地址</text>
        </view>
        <switch 
          class="default-switch" 
          checked="{{isDefault}}"
          bindchange="toggleDefault"
          color="#FBC02D"
        />
      </view>
    </view>

  </scroll-view>

  <!-- 保存按钮 -->
  <view class="save-button-container">
    <view class="save-button" bindtap="saveAddress">
      <text class="save-button-text">保存地址</text>
    </view>
  </view>

</view>
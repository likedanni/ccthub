.container {
  min-height: 100vh;
  background-color: #FFFFFF;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

/* 温馨提示 */
.tip-container {
  display: flex;
  align-items: flex-start;
  padding: 12px 16px;
  background-color: #FFF8E1;
  border-bottom: 1px solid #FFECB3;
}

.tip-icon {
  width: 18px;
  height: 18px;
  margin-right: 8px;
  margin-top: 2px;
}

.tip-text {
  font-size: 12px;
  line-height: 1.5;
  color: #FF8F00;
  font-weight: 500;
  flex: 1;
}

/* 表单通用样式 */
.form {
  padding: 24px 20px;
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.form-label {
  font-size: 14px;
  font-weight: 700;
  color: #1E293B;
  padding-left: 4px;
}

.required {
  color: #EF4444;
}

.sub-label {
  font-size: 12px;
  font-weight: 400;
  color: #94A3B8;
  margin-left: 4px;
}

/* 输入框 */
.input-wrapper {
  position: relative;
  margin-bottom: 30rpx;
}

.form-input {
  width: 100%;
  height: 52px;
  padding: 14px 16px;
  background-color: #F8FAFC;
  border: 1px solid #E2E8F0;
  border-radius: 12px;
  font-size: 16px;
  color: #0F172A;
  font-weight: 500;
  box-sizing: border-box;
}

.form-input:focus {
  background-color: #FFFFFF;
  border-color: #FBC02D;
  box-shadow: 0 0 0 1px #FBC02D;
}

.char-count {
  position: absolute;
  right: 12px;
  top: 50%;
  transform: translateY(-50%);
  font-size: 12px;
  color: #94A3B8;
  font-weight: 500;
  background-color: transparent;
  padding: 0 4px;
}

/* 分类选择 */
.select-wrapper {
  position: relative;
}

.picker {
  width: 100%;
  height: 52px;
  padding: 14px 16px;
  background-color: #F8FAFC;
  border: 1px solid #E2E8F0;
  border-radius: 12px;
  font-size: 16px;
  color: #94A3B8;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.picker.has-value {
  color: #0F172A;
}

.dropdown-icon {
  width: 20px;
  height: 20px;
  opacity: 0.5;
}

/* 分类标签 */
.category-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  padding-top: 4px;
  padding-bottom: 20px;
}

.tag {
  padding: 6px 12px;
  border-radius: 8px;
  font-size: 12px;
  font-weight: 500;
  background-color: #F8FAFC;
  color: #64748B;
  border: 1px solid #F1F5F9;
  transition: all 0.2s;
}

.tag-active {
  background-color: rgba(251, 192, 45, 0.1);
  color: #FBC02D;
  border-color: rgba(251, 192, 45, 0.2);
  font-weight: 600;
}

/* 文本域 */
.form-textarea {
  width: 100%;
  min-height: 140px;
  padding: 14px 16px;
  background-color: #F8FAFC;
  border: 1px solid #E2E8F0;
  border-radius: 12px;
  font-size: 16px;
  color: #0F172A;
  line-height: 1.5;
  box-sizing: border-box;
  resize: none;
}

.form-textarea:focus {
  background-color: #FFFFFF;
  border-color: #FBC02D;
  box-shadow: 0 0 0 1px #FBC02D;
}

/* 图片上传 */
.image-upload-container {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  margin-bottom: 20px;
}

.upload-btn {
  width: 96px;
  height: 96px;
  border: 1px dashed #CBD5E1;
  border-radius: 12px;
  background-color: #F8FAFC;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.upload-btn:active {
  background-color: #F1F5F9;
  border-color: #FBC02D;
  color: #FBC02D;
}

.upload-btn.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.upload-icon {
  width: 24px;
  height: 24px;
  margin-bottom: 4px;
  opacity: 0.4;
}

.upload-text {
  font-size: 10px;
  font-weight: 500;
  color: #94A3B8;
}

.image-preview {
  width: 96px;
  height: 96px;
  border-radius: 12px;
  overflow: hidden;
  position: relative;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.remove-btn {
  position: absolute;
  top: 4px;
  right: 4px;
  width: 20px;
  height: 20px;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4px);
}

.remove-icon {
  width: 12px;
  height: 12px;
}

/* 联系方式 */
.phone-input-wrapper {
  display: flex;
  gap: 12px;
}

.phone-input {
  flex: 1;
  position: relative;
}

.phone-icon {
  position: absolute;
  left: 12px;
  top: 50%;
  transform: translateY(-50%);
  width: 20px;
  height: 20px;
  opacity: 0.4;
}

.phone-input-field {
  width: 100%;
  height: 52px;
  padding: 14px 16px 14px 40px;
  background-color: #F8FAFC;
  border: 1px solid #E2E8F0;
  border-radius: 12px;
  font-size: 16px;
  color: #0F172A;
  font-weight: 500;
  box-sizing: border-box;
}

.phone-input-field:focus {
  background-color: #FFFFFF;
  border-color: #FBC02D;
  box-shadow: 0 0 0 1px #FBC02D;
}

.auto-fill-btn {
  padding: 0 16px;
  height: 52px;
  background-color: rgba(251, 192, 45, 0.1);
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  font-weight: 600;
  color: #FBC02D;
  white-space: nowrap;
  transition: background-color 0.2s;
}

.auto-fill-btn:active {
  background-color: rgba(251, 192, 45, 0.2);
}

/* 提交按钮 */
.submit-section {
  padding-top: 24px;
  padding-bottom: 8px;
}

.submit-btn {
  width: 100%;
  height: 56px;
  background-color: #FBC02D;
  border-radius: 9999px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  font-size: 18px;
  font-weight: 700;
  color: #1E293B;
  box-shadow: 0 4px 14px 0 rgba(251, 192, 45, 0.39);
  transition: all 0.2s;
  border: none;
}

.submit-btn:active {
  background-color: #F9A825;
  transform: scale(0.98);
}

.submit-btn.disabled {
  opacity: 0.5;
  background-color: #E2E8F0;
  color: #94A3B8;
  box-shadow: none;
  pointer-events: none;
}

.submit-icon {
  width: 20px;
  height: 20px;
  transition: transform 0.2s;
}

.submit-btn:not(.disabled):active .submit-icon {
  transform: translateX(2px);
}